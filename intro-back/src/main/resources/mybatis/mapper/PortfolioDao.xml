<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jinkyumpark.introback.portfolio.PortfolioDao">

    <resultMap id="portfolioMap" type="java.util.HashMap"></resultMap>

    <select id="getPortfolioList"
            statementType="CALLABLE"
            parameterType="java.util.HashMap"
    >
        {
            CALL getPortfolioList(
                #{page},
                #{fetch_num},
                #{
                    ref_cursor,
                    mode=OUT,
                    jdbcType=CURSOR,
                    javaType=ResultSet,
                    resultMap=portfolioMap
                }
            )
        }
    </select>

    <select id="getPortfolioLength"
            statementType="CALLABLE"
            parameterType="java.util.HashMap"
            resultType="_int"
            >
        {
            CALL getPortfolioLength(
                #{
                    length,
                    mode=OUT,
                    jdbcType=INTEGER
                }
            )
        }
    </select>

</mapper>